<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/picker_seek_top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/handler_v"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="4"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:max="45"
                android:maxHeight="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@drawable/seek_handler" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/picker_seek_bottom" >

        <ImageButton
            android:id="@+id/ok"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ics"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/picker_accept" />

        <ImageView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/picker_divider" />

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ics"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/picker_cancel" />
    </LinearLayout>

</LinearLayout>